{
  "templates": {
    "drivers": {
      "plugins": [
        {
          "name": "EMG",
          "options": {
            "generators options": [
              {
                "zephyrModel": {
                  "infinite call": false,
                  "initialization functions": [
                    "init_cache",
                    "init_mem_slab_module",
                    "init_mbox_module",
                    "uart_console_init",
                    "init_pipes_module",
                    "init_static_pools",
                    "_ioapic_init",
                    "_loapic_init",
                    "_arc_init",
                    "usb_composite_init",
                    "malloc_prepare",
                    "k_sys_work_q_init",
                    "pinmux_initialize",
                    "_bt_uart_init",
                    "mass_storage_init",
                    "main"
                  ]
                }
              },
              {
                "genericManual": {"enforce replacement": true}
              }
            ],
            "translation options": {
              "entry point": "ldv_main",
              "allocate external": true,
              "environment model file": "environment_model.c",
              "additional headers": [
                "verifier/common.h",
                "verifier/nondet.h",
                "verifier/memory.h"
              ]
            }
          }
        },
        {
          "name": "RSG",
          "options": {
            "common sets model": "counter",
            "opts file": "drivers/interrupt_controller/system_apic.c",
            "common models": {
              "verifier/common.c": {},
              "verifier/gcc.c": {},
              "verifier/nondet.c": {},
              "verifier/reference memory.c": {}
            }
          }
        },
        {"name": "Weaver"},
        {
          "name": "FVTP",
          "options": {
            "merge source files": true,
            "verifier profile": "reachability",
            "verifier": {
              "name": "CPAchecker",
              "version": "trunk:31140"
            }
          }
        }
      ]
    }
  },
  "requirement specifications": {
    "description": "Zephyr requirement specifications",
    "template": "drivers",
    "children": [
      {
        "identifer": "empty",
        "description": "..."
      },
      {
        "identifier": "locks",
        "plugins": [{
          "name": "RSG",
          "options": {"models": ["zephyr/locks.c"]}
        }]

      }
    ]
  }
}
